package cn.newcapec.city.smart.gateway.exception.asserts;

import cn.newcapec.city.smart.gateway.exception.SysException;

/**
 * 通用断言
 * Created by es on 2018/3/14.
 */
public class Assert {

    public Assert() {
    }

    public static void isTrue(boolean exp, String message) {
        if (!exp) {
            throw new SysException(message);
        }
    }

}
